<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/service_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height" />

    <TextView
        android:id="@+id/service_title"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/service_state"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:layout_toRightOf="@id/service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/service_location"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/service_point"
        android:textSize="20dp"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/service_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/service_detail"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>