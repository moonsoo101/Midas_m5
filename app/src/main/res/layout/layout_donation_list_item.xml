<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/donation_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height" />

        <TextView
            android:id="@+id/donation_title"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/donation_state"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/donation_title"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/donation_location"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/donation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/donation_total_point"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>